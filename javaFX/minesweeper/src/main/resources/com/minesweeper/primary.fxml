            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.minesweeper.modules.UI"
            prefWidth="400" prefHeight="400">

    <top>
        <Label fx:id="title" text="Hello,World" BorderPane.alignment="CENTER" 
               style="-fx-font-size: 20px; -fx-padding: 20px;" />
    </top>

    <center>
        <GridPane fx:id="buttonGrid" hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 20px;">
            <!-- Buttons will be added dynamically here -->
        </GridPane>
    </center>

</BorderPane>
